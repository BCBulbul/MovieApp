<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/popular_tv_series_image_view"
                android:scaleType="fitXY"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_marginTop="15dp"
                    android:layout_gravity="end"
                    android:layout_width="48dp"
                    android:textAlignment="center"
                    app:fabSize="normal"
                    android:src="@drawable/floating_action_button_gradient"
                    android:layout_height="48dp" >

                </com.google.android.material.floatingactionbutton.FloatingActionButton>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/popular_tv_series_average_text"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:elevation="10dp"
                    android:layout_width="wrap_content"
                    android:text="Text"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </FrameLayout>




        </FrameLayout>





    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/popular_tv_series_title_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="STRANGER THINGS 2016-"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>